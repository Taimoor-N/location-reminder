<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_login_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_login_image"
        android:src="@drawable/ic_notes"
        app:layout_constraintBottom_toTopOf="@+id/tv_login_btn_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login_btn_email"
        android:layout_width="@dimen/btn_sign_in_width"
        android:layout_height="@dimen/btn_sign_in_height"
        android:layout_marginBottom="@dimen/margin_normal"
        android:background="@color/colorAccent"
        android:drawablePadding="@dimen/padding_medium"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_medium"
        android:text="@string/sign_in_email"
        android:textSize="@dimen/text_size_medium"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/ic_email"
        app:layout_constraintBottom_toTopOf="@+id/tv_login_btn_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_login_btn_google"
        android:layout_width="@dimen/btn_sign_in_width"
        android:layout_height="@dimen/btn_sign_in_height"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="#F2F2F2"
        android:drawablePadding="@dimen/padding_small"
        android:gravity="center_vertical"
        android:text="@string/sign_in_google"
        android:textSize="@dimen/text_size_medium"
        android:textAllCaps="false"
        app:drawableStartCompat="@drawable/ic_google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>